# Tang-edge deployment credentials
# Copy to .env, fill in the platforms you use, then:
#   docker compose run --rm <platform>
# Never commit .env to git.

# ── Cloudflare Workers ─────────────────────────────────────────
CLOUDFLARE_API_TOKEN=

# ── Deno Deploy ────────────────────────────────────────────────
DENO_DEPLOY_TOKEN=
DENO_PROJECT=tang-edge

# ── Vercel ─────────────────────────────────────────────────────
# Run `vercel link` once locally to get ORG_ID and PROJECT_ID
VERCEL_TOKEN=
VERCEL_ORG_ID=
VERCEL_PROJECT_ID=

# ── Netlify ────────────────────────────────────────────────────
NETLIFY_AUTH_TOKEN=
NETLIFY_SITE_ID=

# ── Supabase Edge Functions ────────────────────────────────────
# Run `supabase link --project-ref <ref>` once locally first
SUPABASE_ACCESS_TOKEN=

# ── Azure Functions ────────────────────────────────────────────
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_TENANT_ID=
AZURE_FUNCTION_APP_NAME=

# ── Fastly Compute ─────────────────────────────────────────────
FASTLY_API_TOKEN=

# ── AWS Lambda ─────────────────────────────────────────────────
# Note: initial deploy requires setup.sh (SAM/CDK/Serverless)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_LAMBDA_FUNCTION_NAME=tang-edge

# ── GCP Cloud Functions ────────────────────────────────────────
# Uses gcr.io/google.com/cloudsdktool/cloud-sdk image, not the main image.
# Run `gcloud auth login` locally first.
GCP_PROJECT=
GCP_REGION=europe-west1
ROTATE_TOKEN=
